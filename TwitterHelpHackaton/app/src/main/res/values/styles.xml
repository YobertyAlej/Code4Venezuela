<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name= "android:layout_height">@dimen/_35sdp</item>
        <item name= "android:textAllCaps">true</item>
        <item name= "android:gravity"> center </item>
        <item name= "android:textColor">@color/white</item>
        <item name= "android:textSize">@dimen/font_high</item>
        <item name= "android:textStyle">bold</item>
    </style>

    <style name="TextViewLayoutMainMenu">
        <item name="android:layout_marginLeft">5dp</item>
    </style>


    <style name="AppTheme.TextView.Title" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_high</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="AppTheme.TextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_high</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:lineSpacingExtra">@dimen/_1sdp</item>
    </style>

</resources>
